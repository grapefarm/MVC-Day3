<h1>UploadFile02</h1>
<h4>使用Web API</h4>

<form method="post" enctype="multipart/form-data">
    大頭照: <input type="file" name="f" id="fileInput" />
    <input type="button" onclick="uploadFile()" value="上傳" />

</form>

<div id="result"></div>

@section Scripts{
    <script>
        async function uploadFile() {
            const fileInput = document.getElementById('fileInput');
            const resultDiv = document.getElementById('result');

            if (fileInput.files.length === 0) {
                resultDiv.innerText = '請選擇檔案。';
                return;
            }

            const file = fileInput.files[0];
            const formData = new FormData();
            formData.append("f", file);

            try {
                const response = await fetch('/api/UploadFile02Api/', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const data = await response.json();
                    resultDiv.innerHTML = `
                        <p>上傳成功</p>
                        <p>檔案名稱：${data.fileName}</p>
                        <p>檔案大小：${data.length} bytes</p>
                        <p><a href="${data.filePath}" target="_blank">點我下載</a></p>
                    `;
                } else {
                    const errorText = await response.text();
                    resultDiv.innerHTML = `<p style="color:red;">上傳失敗：${errorText}</p>`;
                }
            } catch (error) {
                resultDiv.innerHTML = `<p style="color:red;">發生錯誤：${error.message}</p>`;
            }
        }
    </script>
}
